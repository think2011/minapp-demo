page {
  background: linear-gradient(#2b7cff, #2d73f9);
  color: #feffff;
  padding: 30rpx 36rpx 20rpx;
}

.title {
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 24rpx;
}

.btn-export {
  font-size: 24rpx;
  position: absolute;
  bottom: 18px;
  left: 15px;
}

.words {
  display: flex;
}

.words .word-list {
  width: 630rpx;
  height: 85vh;
  flex: none;
  padding: 20rpx;
  border: 1px solid #f1f1f1;
  border-radius: 12rpx;
  box-shadow: 0 6rpx 10rpx 0 rgba(0, 0, 0, 0.1);
  margin: 0 40rpx 0 0;
  transform: scale(1, 0.9);
  background: #fff;
  position: relative;
  transition: 0.3s;
}

.words .word-list:last-child {
  transform: scale(1, 0.85);
}

.words .word-list .word-item {
  font-size: 28rpx;
  color: #666;
  background: #f2f2f2;
  margin: 20rpx 24rpx;
  padding: 12rpx 36rpx;
  display: inline-block;
  border-radius: 44rpx;
  box-shadow: 0 2rpx 0 2rpx rgba(0, 0, 0, 0.1);
}

.words .word-list .btn-next {
  position: absolute;
  bottom: -40rpx;
  left: 50%;
  transform: translate(-50%, 5%);
  background: #fff;
  padding: 24rpx 50rpx;
  font-size: 30rpx;
  border-radius: 50rpx;
  color: #fff;
  font-weight: 900;
  background: #34d266;
  box-shadow: 0 2rpx 0 2rpx rgba(0, 0, 0, 0.1);
  opacity: 0;
  transition-delay: 0.1s;
  transition: 0.3s;
}

.words .word-list.active,
.words .word-list.active ~ .word-list {
  height: 80vh;
}

.words .word-list.active .btn-next {
  opacity: 1;
  transform: translate(-50%, 0);
}
